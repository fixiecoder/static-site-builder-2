{
  "name": "static-site-builder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "rename-scripts": "node scripts/rename-script-extensions.js",
    "build": "npm run build:js && npm run rename-scripts && npm run build:sass && npm run build:html",
    "clean": "rm -rf dist",
    "dev": "npm run clean && npm run build && simplehttpserver -p 9999 dist/home & npm-run-all --parallel watch:**",
    "build:js": "webpack",
    "build:html": "gulp templates",
    "build:sass": "node-sass src/styles/main.scss | postcss -u autoprefixer > 'dist/home/styles.css'",
    "watch:html": "chokidar 'src/templates/**/*.handlebars' -c 'npm run build:html'",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run build:js'",
    "watch:sass": "chokidar 'src/styles/**/*.scss' -c 'npm run build:sass'",
    "start": "webpack",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "chokidar-cli": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-compile-handlebars": "^0.6.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "handlebars-loader": "^1.7.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "replacestream": "^4.0.3",
    "through2": "^2.0.3",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
  },
  "dependencies": {
    "gulp-babel": "^7.0.1"
  }
}
